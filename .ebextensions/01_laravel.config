option_settings:
  aws:elasticbeanstalk:container:php:phpini:
    document_root: /public

container_commands:
  01_composer_install:
    command: "export COMPOSER_HOME=/root && composer install --no-dev --optimize-autoloader"
  02_migrate:
    command: "php artisan migrate --force"
    leader_only: true
  03_cache:
    command: "php artisan config:cache && php artisan route:cache"